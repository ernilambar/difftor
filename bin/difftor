#!/usr/bin/env php
<?php
/**
 * Difftor CLI Entry Point
 *
 * @package Difftor
 */

if ( file_exists( __DIR__ . '/../vendor/autoload.php' ) ) {
	require_once __DIR__ . '/../vendor/autoload.php';
} elseif ( file_exists( __DIR__ . '/../../autoload.php' ) ) {
	require_once __DIR__ . '/../../autoload.php';
} else {
	fwrite( STDERR, 'Error: Composer autoload file not found. Please run "composer install".' . PHP_EOL );
	exit( 1 );
}

use Nilambar\Difftor\Console\Difftor_Command;
use Symfony\Component\Console\Application;

$application = new Application( 'Difftor', '1.0.0' );
$application->add( new Difftor_Command() );
$application->setDefaultCommand( 'difftor', true );
$application->run();

