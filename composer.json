{
  "name": "ernilambar/difftor-command",
  "description": "Diff helper.",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Nilambar Sharma",
      "email": "nilambar@outlook.com",
      "homepage": "https://www.nilambar.net",
      "role": "Developer"
    }
  ],
  "homepage": "https://github.com/ernilambar/difftor-command",
  "support": {
    "issues": "https://github.com/ernilambar/difftor-command/issues"
  },
  "require": {
    "php": ">=7.4",
    "jfcherng/php-diff": "^6",
    "symfony/console": "^5.4|^6.0|^7.0"
  },
  "require-dev": {
    "slevomat/coding-standard": "^8",
    "phpunit/phpunit": "^9.5|^10.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Nilambar\\Difftor_Command\\": "src"
    }
  },
  "bin": [
    "bin/difftor"
  ],
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "ergebnis/composer-normalize": true,
      "phpstan/extension-installer": true
    },
    "platform": {
      "php": "7.4"
    },
    "process-timeout": 7200,
    "sort-packages": true
  },
  "extra": {},
  "scripts": {
    "format": "run-phpcbf-cleanup",
    "lint": [
      "run-linter-tests",
      "@phpcs"
    ],
    "phpcs": "run-phpcs-tests",
    "phpstan": "run-phpstan-tests",
    "phpunit": "phpunit",
    "test": [
      "@lint",
      "@phpcs",
      "@phpunit"
    ]
  }
}
