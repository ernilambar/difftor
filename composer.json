{
  "name": "ernilambar/difftor",
  "description": "Diff helper - Compare two sources (URLs, directories, or zip files) and generate an HTML diff file.",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Nilambar Sharma",
      "email": "nilambar@outlook.com",
      "homepage": "https://www.nilambar.net",
      "role": "Developer"
    }
  ],
  "homepage": "https://github.com/ernilambar/difftor",
  "support": {
    "issues": "https://github.com/ernilambar/difftor/issues"
  },
  "require": {
    "php": ">=7.4",
    "jfcherng/php-diff": "^6",
    "symfony/console": "^5.4 || ^6.0 || ^7.0"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1",
    "php-parallel-lint/php-parallel-lint": "^1.4",
    "phpcompatibility/php-compatibility": "dev-develop#2b7b6e8f5d0ccae3bd41c25bcf1298884a5e1f62",
    "phpunit/phpunit": "^9.5 || ^10.0",
    "slevomat/coding-standard": "^8"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Nilambar\\Difftor\\": "src"
    }
  },
  "bin": [
    "bin/difftor"
  ],
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "ergebnis/composer-normalize": true,
      "phpstan/extension-installer": true
    },
    "platform": {
      "php": "7.4"
    },
    "sort-packages": true
  },
  "extra": {},
  "scripts": {
    "format": "vendor/bin/phpcbf",
    "lint": [
      "@php-lint",
      "@phpcs"
    ],
    "php-lint": "@php ./vendor/bin/parallel-lint --colors --exclude .git --exclude vendor .",
    "phpcs": "vendor/bin/phpcs",
    "phpunit": "vendor/bin/phpunit",
    "test": [
      "@lint",
      "@phpunit"
    ]
  }
}
